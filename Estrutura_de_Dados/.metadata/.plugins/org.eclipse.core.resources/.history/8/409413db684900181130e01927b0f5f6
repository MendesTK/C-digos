import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.Socket;
import java.util.Scanner;

public class ClienteV2 extends Thread {
	
	private Socket con;
	private String ip;
	private int porta;
	private String nome;
	private String meuNome;
	
	public ClienteV2 (Socket socket) throws IOException {
		Scanner entrada = new Scanner(System.in);
		System.out.print("Informe IP: ");
		ip = entrada.nextLine();
		System.out.print("Informe a Porta: ");
		porta = entrada.nextInt();
		System.out.print("Informe o seu nome: ");
		meuNome = entrada.nextLine();
		
		this.con = socket;
		entrada.close();
	}
	
	public void conectar() throws IOException {
		Socket socket = new Socket(ip, porta);
		PrintStream saida = new PrintStream(socket.getOutputStream());
		saida.println(meuNome.toUpperCase());
		Thread thread = new ClienteV2(socket);
        thread.start();
		
	}
	
	
	

	
	public void run(){
		try{
			BufferedReader entrada = new BufferedReader(new InputStreamReader(this.con.getInputStream()));
			String msg;
			
			while(true){
				msg = entrada.readLine();
				
				if(msg == null){
					System.out.println("Conexão encerrada!");
					System.exit(0);
				}
				
				System.out.println();
				System.out.println(msg);
				System.out.print(": ");
			}
		} catch (IOException e){
			e.printStackTrace();
		}
	}
	
	
	
	
	public static void main(String[] args) {
		try{
			Scanner entrada = new Scanner(System.in);
			System.out.print("Informe o seu nome: ");
			nome = entrada.nextLine();
			
			System.out.print("Informe o endereço de IP: ");
			ip = entrada.nextLine();
			
			System.out.print("Informe a porta: ");
			porta = entrada.nextInt();
			
			Socket socket = new Socket(ip, porta);
			PrintStream saida = new PrintStream(socket.getOutputStream());
			BufferedReader teclado = new BufferedReader(new InputStreamReader(System.in));
			saida.println(nome.toUpperCase());
			Thread thread = new Cliente(socket);
			thread.start();
			String msg;
			while(true){
				System.out.print("Mensagem > ");
				msg = teclado.readLine();
				saida.print(msg);
			}
		}catch (IOException e){
			e.printStackTrace();
		}
	}
}