package Rieper;

import java.util.ArrayList;

public class CriarArray {

	public static void main(String[] args) {
		String Pergunta1 = "Poupança, Consórcio";
		char testePer[] = Pergunta1.toCharArray();
		ArrayList<String> teste = new ArrayList();
		int i = 0;
		char letra;
		char palavra = ' ';
		
		
		while (i < Pergunta1.length()){
			if(testePer[i] != ',' && testePer[i] != ' '){
				letra = testePer[i];
				palavra += letra;
				System.out.println(palavra);
			}
			
			
		}

	}

}
