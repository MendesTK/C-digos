package com.mcdonalds.DAO;

import java.sql.*;

public class ConectionSQLSERVER {

	public Connection getConnection(){
		try{
			
			return DriverManager
					.getConnection("jdbc:sqlserver://192.168.0.107:1433;" + "databaseName=MC_Donalds;" // link de conexão
							, "Mendes"// usuario
							, "123456"); // senha
			
		}catch (Exception e) {
			e.printStackTrace();
			throw new RuntimeException();
		}
	}
}
