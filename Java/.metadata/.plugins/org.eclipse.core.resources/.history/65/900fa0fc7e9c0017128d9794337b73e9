package Rieper;

import java.util.ArrayList;

public class CriarArray {

	public static void main(String[] args) {
		String Pergunta1 = "Poupança, Consórcio";
		char testePer[] = Pergunta1.toCharArray();
		ArrayList<String> teste = new ArrayList();
		
		for(int i = 0; i < Pergunta1.length(); i++){
			int aux = 0;
			if(testePer[i] != ',' && testePer[i] != ' '){
				System.out.println(testePer[i]);
			}
		}

	}

}
