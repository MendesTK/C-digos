package OperacoesMAT;

public class orientado {
	public float somar(float n1, float n2){
		return n1 + n2;
	}
	
	public float subtrair(float n1, float n2){
		return n1+(-n2);
	}
	
	public float multiplicacao(float n1, float n2){
		float soma = 0;
		boolean negativo = false;
		
		if ( (a < 0 && b > 0) || (a > 0 && b < 0) ){
			negativo = true;
		}
		
		if ( a < 0 ){
			a = this.subtrair(0f,a);
		}
		
		if ( b < 0 ){
			b = this.subtrair(0f,b);
		}
		
		float i;
		
		for ( i=0;i<(int)b;i = this.somar(i, 1) ){
			soma = this.somar(soma,a);
		}
		
		b = this.subtrair(i,b);
		if ( b < 0 ){
			b = this.subtrair(0f,b);
		}
		
		if ( b != 0 ){
			for ( i=0;i<b;i = this.somar(i, 0.1f) ){
				soma = this.somar(soma,this.dividir(a, 10f));
			}
			
			b = this.subtrair(i,b);
			if ( b < 0 ){
				b = this.subtrair(0f,b);
			}
			
			
			if ( b != 0 ){
				for ( i=0;i<b;i = this.somar(i, 0.01f) ){
					soma = this.somar(soma,this.dividir(a, 100f));
				}
				
				b = this.subtrair(i,b);
				if ( b < 0 ){
					b = this.subtrair(0f,b);
				}
				
				if ( b != 0 ){
					for ( i=0;i<(int)b;i = this.somar(i, 0.001f) ){
						soma = this.somar(soma,this.dividir(a, 1000f));
					}
				}
			}
		}
		
		if ( negativo ){
			soma = this.subtrair(0f,soma);
		}
		
		return soma;
	}
	public float divisao(float n1, float n2){
		float cont = 0;
		boolean negativo = false;
		
		if ( (a < 0 && b > 0) || (a > 0 && b < 0) ){
			negativo = true;
		}
		
		if ( a < 0 ){
			a = this.subtrair(0f,a);
		}
		
		if ( b < 0 ){
			b = this.subtrair(0f,b);
		}
		
		while (a >= b){
			a = this.subtrair(a, b);
			cont = this.somar(cont, 1);
		}
		
		if ( a > 0 ){
			a = this.multiplicar(a, 10);
			while (a >= b){
				a = this.subtrair(a, b);
				cont = this.somar(cont, 0.1f);
			}
		}
		
		if ( a > 0 ){
			a = this.multiplicar(a, 10);
			while (a >= b){
				a = this.subtrair(a, b);
				cont = this.somar(cont, 0.01f);
			}
		}
		
		if ( a > 0 ){
			a = this.multiplicar(a, 10);
			while (a >= b){
				a = this.subtrair(a, b);
				cont = this.somar(cont, 0.001f);
			}
		}
		
		if ( negativo ){
			cont = this.subtrair(0f,cont);
		}
			
		return cont;
	}
	public float potência(float n1, float n2){
float soma = a;
		
		if ( b != 0 ){
			for ( float i=1;i<b;i = this.somar(i, 1) ){
				soma = this.multiplicar(soma,a);
			}
		} else {
			soma = 1;
		}
		
		return soma;
	}
	
}
